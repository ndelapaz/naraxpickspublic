{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/liga-mx-fixtures.schema.json",
  "title": "Liga MX Fixtures",
  "type": "object",
  "additionalProperties": false,
  "required": ["league", "season", "round", "timezone", "fixtures"],
  "properties": {
    "league": { "type": "string", "minLength": 1 },
    "season": { "type": "string", "minLength": 1 },
    "round": { "type": "string", "minLength": 1 },
    "timezone": { "type": "string", "minLength": 1 },
    "fixtures": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/fixtureItem" }
    }
  },
  "$defs": {
    "team": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string", "minLength": 1 }
      }
    },
    "fixtureItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fixture", "teams"],
      "properties": {
        "fixture": {
          "type": "object",
          "additionalProperties": false,
          "required": ["date"],
          "properties": {
            "date": {
              "type": "string",
              "format": "date-time",
              "description": "ISO-8601 datetime (e.g. 2026-02-07T01:00:00Z)"
            }
          }
        },
        "teams": {
          "type": "object",
          "additionalProperties": false,
          "required": ["home", "away"],
          "properties": {
            "home": { "$ref": "#/$defs/team" },
            "away": { "$ref": "#/$defs/team" }
          }
        }
      }
    }
  }
}
